<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Artists</title>
  </head>

  <body>
    <h1><%= @artist.name %></h1>

    <h2>Songs</h2>
    <ul>
      <% @artist.songs.each do |song| %>
        <li>
          <a href="<%= song.to_slug %>"><%= song.name %></a>
        </li>
      <% end %>
    </ul>

    <h2>Genres</h2>
    <ul>
      <% @artist.genres.each do |genre| %>
        <li>
          <a href="<%= genre.to_slug %>"><%= genre.name %></a>
        </li>
      <% end %>
    </ul>
  </body>
</html>
